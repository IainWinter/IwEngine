# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true


# Matches multiple files with brace expansion notation
# Set default charset
[*.{h, hpp, c, cpp}]
charset = utf-8
indent_style = tab
indent_size = 5
trim_trailing_whitespace = true
